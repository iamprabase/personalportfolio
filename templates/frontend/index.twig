{% extends 'frontend/layout.twig' %}

{% block title %} {{ trans('home')}} {% endblock %}

{% block content %}
<div class="container-fluid pb-4 pt-4">
  <div class="container-fluid paddding">
    <div class="row mx-0">

      {# Left Section #}
      <div class="col-md-8 animate-box" data-animate-effect="fadeInLeft">
        <div class="container">
            <div class="row">
              <div class="col-md-5 fh5co_heading fh5co_heading_border_bottom py-2 mb-4">{{trans('articles')}}
              </div>
            </div>
          <div class="container-fluid paddding">

            {% for article in articles %}
            <div class="row pb-4">
              <div class="col-md-5">
                <div class="fh5co_hover_news_img">
                  <div class="fh5co_news_img">
                    <img
                      src="/assets/{{article.featured_image ? article.featured_image : 'frontend/default_images/default_image.png' }}"
                      alt="{{ article.title }}" />
                  </div>
                  <div></div>
                </div>
              </div>
              <div class="col-md-7 animate-box">
                <div>
                  <a href="/article/{{article.slug}}" class="fh5co_magna py-2"> {{ article.title }} </a>
                </div>
                <div>
                  <a href="/article/{{article.slug}}" class="fh5co_mini_time py-3"> {{ article.publisher }} - <i class="fa fa-clock-o"></i> {{
                      article.publication_date|date("F j, Y") }}</a>
                </div>
                <div class="fh5co_consectetur"> {{ article.content | striptags | slice(0, 150) ~ '...' }}
                </div>
                <a href="/article/{{article.slug}}" class="read-more">Read More</a>
              </div>
            </div>
            {% endfor %}
          </div>
          <div class="row">
            <div class="col-12 text-center pb-4 pt-4 mx-0 animate-box" data-animate-effect="fadeInUp">
              <!-- <a href="#" class="btn_mange_pagging"><i class="fa fa-long-arrow-left"></i>&nbsp;&nbsp; Previous</a>
                <a href="#" class="btn_pagging">1</a>
                <a href="#" class="btn_pagging">2</a>
                <a href="#" class="btn_pagging">3</a>
                <a href="#" class="btn_pagging">...</a>
                <a href="#" class="btn_mange_pagging">Next <i class="fa fa-long-arrow-right"></i>&nbsp;&nbsp; </a> -->
              {% if currentPage > 1 %}
              <a href="?page={{ currentPage - 1 }}" class="btn_mange_pagging">
                <i class="fa fa-long-arrow-left"></i>&nbsp;&nbsp; Previous
              </a>
              {% endif %}

              {% for page in 1..totalPages %}
              <a href="?page={{ page }}" class="{{ page == currentPage ? 'active btn_pagging' : 'btn_pagging' }}">
                {{ page }}
              </a>
              {% endfor %}

              {% if currentPage < totalPages %} <a href="?page={{ currentPage + 1 }}" class="btn_mange_pagging">
                Next <i class="fa fa-long-arrow-right"></i>&nbsp;&nbsp;
                </a>
                {% endif %}
            </div>
          </div>
        </div>
      </div>

      <div class="col-md-3 animate-box" data-animate-effect="fadeInRight">
        <div class="container">

          <div class="row">
            <div>
              <div class="fh5co_heading fh5co_heading_border_bottom py-2 mb-4">{{ trans('most_popular') }}</div>
            </div>

            {% for article in articles %}
            <div class="row pb-3">
              <div class="col-5 align-self-center">
                <img src="/assets/{{article.featured_image ? article.featured_image : 'frontend/default_images/default_image.png' }}" alt="{{ article.title }}" class="fh5co_most_trading" />
              </div>
              <div class="col-7 paddding">
                <div class="most_fh5co_treding_font">
                  <a href="/article/{{article.slug}}">
                    {{ article.title }}
                  </a>
                </div>
                <div class="most_fh5co_treding_font_123"> {{ article.publisher }} - <i class="fa fa-clock-o"></i> {{ article.publication_date|date("F j, Y") }}</div>
              </div>
            </div>
            {% endfor %}
          </div>

          <div class="row">
            <div>
              <div class="fh5co_heading fh5co_heading_border_bottom py-2 mb-4">{{ trans('featured_posts') }}</div>
            </div>

            {% for article in articles %}
            <div class="row pb-3">
              <div class="col-5 align-self-center">
                <img src="/assets/{{article.featured_image ? article.featured_image : 'frontend/default_images/default_image.png' }}" alt="{{ article.title }}" class="fh5co_most_trading"  />
              </div>
              <div class="col-7 paddding">
                <div class="most_fh5co_treding_font"> <a href="/article/{{article.slug}}">
                  {{ article.title }}
                </a></div>
                <div class="most_fh5co_treding_font_123"> {{ article.publisher }} - <i class="fa fa-clock-o"></i> {{ article.publication_date|date("F j, Y") }}</div>
              </div>
            </div>
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
